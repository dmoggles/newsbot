# Example secrets configuration file
# Copy this file to secrets.yaml and add your actual credentials
# NEVER commit secrets.yaml to version control

# BlueSky Social Network Credentials
# Get app password from: BlueSky Settings â†’ App Passwords
bluesky:
  handle: "your-handle.bsky.social"     # Your complete BlueSky handle
  app_password: "your-app-password"     # App-specific password (NOT your main password)

# OpenAI API Configuration
# Get API key from: https://platform.openai.com/api-keys
openai:
  api_key: "sk-your-openai-api-key"     # Your OpenAI API key
  # model: "gpt-4o"                     # Optional: Override model from config.yaml
  # max_tokens: 200                     # Optional: Override max_tokens from config.yaml

# Note: Non-sensitive OpenAI settings (model, max_tokens) are configured in config.yaml
# You can override them here if needed for specific deployments

# Security Notes:
# 1. Set restrictive file permissions: chmod 600 configs/secrets.yaml
# 2. Ensure this file is in .gitignore
# 3. Use app passwords, not main account passwords
# 4. Rotate keys regularly for security
